<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>jQuery UI Tabs - Tabs at bottom</title>
	<link rel="stylesheet" href="slidingtabs-horizontal.css">
	<script type="text/javascript" src="jquery-1.5.1.js"></script>
	<script type="text/javascript" src="jquery.mousewheel.min.js"></script>
	<script type="text/javascript" src="jquery.easing.1.3.js"></script>
	<script type="text/javascript" src="jquery.slidingtabs.pack.js"></script>
	
	 <script type="text/javascript">  
		 $(document).ready(function() {
				
		  		// Horizontal Sliding Tabs demo
		  		$('div#st_horizontal').slideTabs({  			
					// Options  			
					contentAnim: 'slideH',
					contentAnimTime: 600,
					contentEasing: 'easeInOutExpo',
					orientation: 'horizontal',
					tabsAnimTime: 300			
		  		});		  		  		
		  	
		  	});		
    </script>
</head>
<body>	                
        
    <h1>Horizontal demo</h1>                     
            
    <!-- Start HTML - Horizontal tabs -->
    <div class="st_horizontal" id="st_horizontal">                                                
        
        <div class="st_tabs_container">                                                                                                                                          
            
            <a class="st_prev st_btn_disabled" href="#prev" style="display: inline;"></a>
            
            <div class="st_slide_container" style="overflow: hidden;">
            
                <ul class="st_tabs" style="margin-left: 0px;">
                    <li><a class="st_tab st_tab_active" rel="tab_1" href="#st_content_1">Horizontal Tab #1</a></li>
                    <li><a class="st_tab" rel="tab_2" href="#st_content_2">Horizontal Tab #2</a></li>                                     
                    <li><a class="st_tab" rel="tab_3" href="#st_content_3">Horizontal Tab #3</a></li>
                    <li><a class="st_tab" rel="tab_4" href="#st_content_4">Horizontal Tab #4</a></li>
                    <li><a class="st_tab" rel="tab_5" href="#st_content_5">Horizontal Tab #5</a></li>                                                       
                    <li><a class="st_tab" rel="tab_6" href="#st_content_6">Horizontal Tab #6</a></li>
                    <li><a class="st_tab" rel="tab_7" href="#st_content_7">Horizontal Tab #7</a></li>
                    <li><a class="st_tab" rel="tab_8" href="#st_content_8">Horizontal Tab #8</a></li>                                                            
                </ul>
            
            </div> <!-- /.st_slide_container -->
            
            <a class="st_next" href="#next" style="display: inline;"></a>                                                                                                
        
        </div> <!-- /.st_tabs_container -->
       
        <div class="st_view_container">
        
            <div class="st_view">
                        
                <div class="st_tab_view st_active_view" id="st_content_1" style="position: absolute;">
                    <h2>Horizontal Tab #1</h2>
                </div>
                
                <div class="st_tab_view" id="st_content_2" style="position: absolute; display: none;">
                    <h2>Horizontal Tab #2</h2>
                </div>
                
                <div class="st_tab_view" id="st_content_3" style="position: absolute; display: none;">
                    <h2>Horizontal Tab #3</h2>
                    
                </div>
                
                <div class="st_tab_view" id="st_content_4" style="position: absolute; display: none;">
                    <h2>Horizontal Tab #4</h2>
                </div>
                
                <div class="st_tab_view" id="st_content_5" style="position: absolute; display: none;">
                    <h2>Horizontal Tab #5</h2>
                </div>
                
                <div class="st_tab_view" id="st_content_6" style="position: absolute; display: none;">
                    <h2>Horizontal Tab #6</h2>
                    
                </div>
                
                <div class="st_tab_view" id="st_content_7" style="position: absolute; display: none;">
                    <h2>Horizontal Tab #7</h2>
                    
                </div>
                
                <div class="st_tab_view" id="st_content_8" style="position: absolute; display: none;">
                    <h2>Horizontal Tab #8</h2>
                    
                </div>                                
            
            </div> <!-- /.st_view -->
         
        </div> <!-- /.st_view_container -->                                          
    
    </div> <!-- /#st_horizontal -->        
    <!-- End HTML - Horizontal tabs -->                                                                                                        
   

</body>
</html>
