#mini-signin{width:490px;border-radius:5px;background:#838383;padding:3px;text-align:left;position:absolute;z-index:1001;box-shadow: 3px 3px 10px #464646;-webkit-box-shadow:3px 3px 10px #464646;-moz-box-shadow:3px 10px #464646;}
#mini-signin .wrap{background:#fff;padding:15px;position:relative;overflow:visible;border:1px solid #ccc;}
#mini-signin .nav-tab{clear:both;height:30px;padding:0 148px;border-bottom:1px solid #C2C2C2;overflow:visible;}
#mini-signin .nav-tab li{width:80px;text-align:center;line-height:26px;display:block;outline:none;margin-bottom:-1px;cursor:pointer;font-size:1.2em;color:#808080;position:relative;z-index:1;float:left;}
#mini-signin .nav-tab li.selected{font-weight:bolder;border-bottom:4px solid #DE192D;color:#DE192D;}
#mini-signin .tip{color:#d88507;margin:5px 0 -2px 100px;padding:2px 5px 0 10px;border:1px solid #FFF7C0;border-radius:2px;position:relative;visibility: hidden; background: #FFF7C0;top:5px;left:35px;display:inline-block;}
#mini-signin .tip:after,#mini-signin .tip:before{bottom:100%;border:solid transparent;content:" ";height:0;width:0;position: absolute;}
#mini-signin .tip:after{border-bottom-color:#FFF7C0;border-width:5px;left:20px;margin-left:-5px;}
#mini-signin .tip:before{border-bottom-color:#FFF7C0;border-width:6px;left:20px;margin-left:-6px;}
#mini-signin p.error{background:#c60000;color:#fff;}
#mini-signin p.error:before,#mini-signin p.error:after{border-bottom-color:#c60000;}
#mini-signin .close{position:absolute;top:-2px;right:-2px;height:30px;width:30px;}
#mini-signin .close a{display:block;height:30px;background:url(../images/icons.png) no-repeat -134px -31px;text-indent:-999px;overflow:hidden;}
#mini-signin .close a:hover{background:url(../images/icons.png) no-repeat -169px -31px;}
#mini-signin form{padding:20px 0;}
#mini-signin fieldset div{clear:both;height:26px;line-height:26px;}
#mini-signin fieldset label{font-size:1.2em;width:120px;display:block;height:24px;text-align:right;float:left;font-size:13px;color:#787878}
#mini-signin fieldset input{font-size:1.2em;font-weight:bolder;outline:none;width:212px;margin:0 15px;color:#333;border:1px solid #ccc;height:25px;padding:2px 4px;border-radius: 3px;box-shadow:1px 1px 1px #f2f2f2 inset;}
#mini-signin fieldset input[type='text']:focus,#mini-signin fieldset input[type='password']:focus{border:1px solid #FFAA55;box-shadow:1px 1px 1px #FFD4AA inset;}
#mini-signin fieldset input.placeholder{color:#ddd;font-weight:normal;}
#mini-signin .agreement input{width:auto;border:none;box-shadow:0 0 0;}
#mini-signin span.loading{visibility:hidden;width:32px;height:32px;background:url(../images/loading_32x32.gif) no-repeat 0 0;display:block;float:left;position:absolute;top:7px;left:100px;text-indent:-9999px;overflow:hidden;}
#mini-signin button{background:url(../images/icons.png) no-repeat 0 -173px;height:35px;width:85px;border:none;color:#fff;text-shadow:2px 2px 2px #333;text-align:center;cursor:pointer;font-size:1.2em}
#mini-signin button:hover{background:url(../images/icons.png) no-repeat 0 -212px;}
#mini-signin .b-wrap{height:35px;position:relative;padding:5px 0 0 133px;}
#mini-signin div.verify input{width:70px; vertical-align: middle;}
#mini-signin div.verify{clear:both;}
#mini-signin div.verify img{height:33px;width:79px; vertical-align: middle;}
#mini-signin div.verify a{padding:0 5px;}
#mini-signin .signin-panel div.verify{height:50px;}
#mini-signin div.verify p{line-height:normal;}
/*
#mini-signin .signin-panel p.verifyCode{display:none;}
*/
#mini-signin .signin-panel .verify{display:none;}
#mini-signin .message{padding:0 0 0 135px;margin:-20px 0 0 0;color:red;height:20px;line-height:20px;}
#mini-signin .quick{text-align:right;}
#mini-signin p.agree{margin-top:-10px;}

.signin-panel fieldset{padding:30px 0 0 0;}
.signin-panel .b-wrap b{margin:0 0 0 30px;font-weight:normal;color:#aaa;}
.signin-panel .b-wrap a{margin:0 5px;}
.signin-panel p.signup{text-align:center;margin:10px;}
.signin-panel .other {text-align:center;}
.signin-panel .other p{line-height:30px;border-bottom:1px solid #ccc;color:#777}
.signin-panel .other ul{height:30px;clear:both;margin:20px auto;padding:0 0 0 100px;}
.signin-panel .other li{float:left;padding:0 0 0 20px;background-image:url(../images/icons.png);background-repeat:no-repeat;}
.signin-panel .other a{display:block;background:#fff;color:#777;text-align:left;}
.signin-panel .other li.qq{background-position:0 -261px;}
.signin-panel .other li.alipay{background-position:-62px -261px;}
.signin-panel .other li.sina{background-position:-42px -261px;}
.signin-panel .other li.douban{background-position:-22px -261px;}
.signin-panel .other li.qq a{width:30px;}
.signin-panel .other li.alipay a{width:46px;}
.signin-panel .other li.sina a{width:56px;}
.signin-panel .other li.douban a{width:40px;}

.signup-panel{display:none;border-bottom:1px solid #C2C2C2; }
.signup-panel fieldset{padding:10px 0 0 0;}
.signup-panel .agreement{padding:0 0 0 120px;clear:both;color:#777;}
.signup-panel .agreement input{padding:0;margin:0;line-height:normal;float:left;}
.signup-panel .b-wrap{padding:5px 0 0 88px;}
